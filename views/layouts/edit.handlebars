<h2>Editar Livros</h2>

<form action="/edit/save" method="POST">
<input type="hidden" value="{{book.id}}" name="id">
    <div>
        <label for="title">Titulo:</label>
        <input type="text" name="title" placeholder="titulo" id="title" value="{{book.title}}">
    </div>

    <div>
        <label for="pageqty">Numero paginas</label>
        <input type="number" name="pageqty" id="pageqty" placeholder="paginas" value="{{book.pageqty}}">
    </div>

    <button type="submit">ENVIAR</button>


</form>
