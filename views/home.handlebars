<main>

    <h2>HOME</h2>

{{#each books}}
    <div class="book">
        <h3>titulo: {{this.title}}</h3>
        <p>Quantidade de paginas {{this.pageqty}}</p>

        <div class="buttons">
        <a href="/book/{{this.id}}" class="mais">Ver Mais</a>
            <a href="/edit/{{this.id}}" class="editar">editar</a>
            <form action="/delete/"  method="post">
            <input type="hidden" name="id" value="{{this.id}}">
                <button>Excluir</button>
            </form>
            </div>
    </div>
    
{{/each}}
</main> 